{
  "manifest_version": 2,
  "name": "ますとどん もっど",
  "version": "1.0",
  "description": "A simple CSS modification for mastodon",
  "content_scripts": [
    {
      "matches": [
        "https://friends.nico/*",
        "https://mstdn.jp/*",
        "https://pawoo.net/*"
      ],
      "css": ["style.css"],
      "js": [
        "content.js",
        "mathjax.js"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "https://friends.nico/*",
    "https://mstdn.jp/*",
    "https://pawoo.net/*"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
